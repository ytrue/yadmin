<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ytrue.yadmin.system.dao.SysConfigDao">

	<!-- 根据key，更新value -->
	<update id="updateValueByKey" parameterType="map">
		update sys_config set param_value = #{value} where param_key = #{key}
	</update>

	<!-- 根据key，查询value -->
	<select id="queryByKey" parameterType="string" resultType="com.ytrue.yadmin.system.model.SysConfig">
		select * from sys_config where param_key = #{key}
	</select>

	<delete id="deleteBatch"  parameterType="Long">
		delete from sys_config where id in
  		<foreach collection="ids" item="id" index="no" open="("
            separator="," close=")">
            #{id}
        </foreach>
	</delete>
</mapper>
